
<div class="card-header">
  <%= link_to 'Upload File', new_asset_path, class: 'btn btn-primary' %>
</div>
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Asset ID</th>
        <th>File Name</th>
        <th>Uploaded At</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @assets.each do |asset| %>
        <tr>
          <td><%= asset.user_id %></td>
          <td><%= link_to 'Show', asset %></td>
          <td><%= asset.uploaded_file_updated_at %></td>
          <td><%= link_to 'Delete', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

