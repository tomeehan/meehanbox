<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card form-signin">
      <h3 class="card-header">
        <%= t "user.edit.my_account" %>
      </h3>
      <div class="card-block">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
  
          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
  
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
  
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t "user.edit.awaiting_confirmation" %>: <%= resource.unconfirmed_email %></div>
          <% end %>

          <p class="change-password">
            <a data-toggle="collapse" data-target="#demo" class="link">Change my password</a>
          </p>

          <div id="demo" class="collapse">
            <div class="change-password-body">
              <h3>New Password:</h3>
              <div class="form-group">
                <%= f.label :password %> <i>(<%= t "user.edit.password.leave_blank" %>)</i><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> <%= t "user.edit.password.characters_minimum" %></em>
                <% end %>
              </div>
      
              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
            </div>  
          </div>  
  
          <div class="form-group">
            <%= f.label :current_password %> <i>(<%= t "user.edit.password.confirm_changes" %>)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
          </div>
  
          <div class="actions">
            <%= f.submit "Update", class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
    <p class="cancel-account"><%= t "user.delete.unhappy" %> <%= link_to t('user.delete.cancel_my_account'), registration_path(resource_name), data: { confirm: t('user.delete.delete_confirmation') }, method: :delete %></p>
  </div>
</div>