<!DOCTYPE html>
<html>
  <head>
    <title>Storage</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		
		<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
		  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
		    <i class="fa fa-bars"></i> Menu
		  </button>
		  <a class="navbar-brand" href="/"><i class="fa fa-archive"></i> MeehanBox</a
		  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
		    <div class="navbar navbar-brand mr-auto"></div>
		    <div class="navbar-nav">
		      <% if user_signed_in? %>
		      		<%= link_to root_path, class: 'nav-item nav-link' do %>
		      			<%= t "nav.my_files"%>
		      		<% end %>
					<%= link_to destroy_user_session_path, method: :delete, class: 'nav-item nav-link' do %>
						<%= t "nav.sign_out" %>
					<% end %>
				<% else %>
					<%= link_to new_user_session_path, class: 'nav-item nav-link' do %>
						<%= t "nav.login" %>
					<% end %>
					<%= link_to new_user_registration_path, class: 'nav-item nav-link' do %>
						<%= t "nav.sign_up" %>
					<% end %>
				<% end %>
		    </div>
		  </div>
		</nav>		
			<div class="container">
				<% if flash[:error] -%>
				  <br>
				  <p class='alert alert-warning'><%=h flash[:error] %></p>
				<% end -%>
				<% if flash[:notice] -%>
				  <br>
				  <p class='alert alert-success'><%=h flash[:notice] %></p>
				<% end -%>
			</div>
	<br>
	<br>
	<br>
    <div class="container">
    	<div class="<% if user_signed_in? %>card<% end %>">
    		<%= yield %>
    	   	</div>
    </div>
	<footer>
		<div class="row">
			<div class="col-md-4">
				<p class="github">
					<a href="http://github.com/tomeehan/storage">
					<i class="fa fa-github"></i>
					See GitHub Repo
					</a>
				</p>
			</div>			
			<div class="col-md-4">
				<p class="logo"><i class="fa fa-archive"></i> MeehanBox</p>
			</div>
			<div class="col-md-4">
				<p>
					<i class="fa fa-globe"></i>
					Choose Language: 
					<%= link_to_unless_current "English", locale: "en" %> | 
					<%= link_to_unless_current "Kernow", locale: "ke" %>
				</p>
			</div>			
		</div>
	</footer>
  </body>
</html>
